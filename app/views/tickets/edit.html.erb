<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h4><br>Sell your tickets safely with TicketBuddy! 🎟️</h4><br>
      <h2><br>Here you can edit your <b><%= @ticket.artist %></b> ticket:</h2><br>
      <%= simple_form_for @ticket do |f| %>
        <%= f.input :artist %>
        <%= f.input :ticket_type %>
        <%= f.input :price %>
        <%= f.input :city %>
        <%= f.input :event_date %>
        <%= f.submit "Edit ticket", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
