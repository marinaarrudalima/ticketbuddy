<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for @ticket do |f| %>
        <%= f.input :artist %>
        <%= f.input :ticket_type %>
        <%= f.input :price %>
        <%= f.input :city %>
        <%= f.input :event_date %>
        <%= f.submit "Add ticket", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
