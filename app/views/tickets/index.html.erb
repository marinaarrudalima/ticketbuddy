<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'backgroundhome.jpg' %>);">
  <div class="container justify-content-center">
    <h1>The safest way to buy and sell tickets</h1>
  </div>
  </div>

<div class="container justify-content-start">
  <h3 class="header mt-5"><strong>My Selling Tickets</strong></h3>
</div>

<div class="cards-container">
  <% @tickets.each do |ticket| %>
    <div class="card-product">
      <img src="<%= image_path ticket.artist.downcase.gsub(' ', '_') + '.jpg' %>"/>
      <div class="card-product-infos">
        <h2><%= ticket.artist %></h2>
        <p>The show takes place in <b><%= ticket.city %></b></p>
        <h2>$ <%= ticket.price %></h2>
        <%= link_to "Delete", ticket, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <br>
        <%= link_to "Edit", edit_ticket_path(ticket) %>
      </div>
    </div>
  <% end %>
</div>
