<h1>My <b>Orders</b>:</h1>

  <% @orders.each do |order| %>
    <div class="card-trip">
      <img src="<%= image_path order.ticket.artist.downcase.gsub(' ', '_') + '.jpg' %>"/>
      <div class="card-trip-infos">
        <div>
          <h2><%= order.ticket.artist %></h2>
          <p>The show will be held in <b><%= order.ticket.city %></b></p>
        </div>
        <h2 class="card-trip-pricing">$<%= order.ticket.price %></h2>
        <%= link_to "Delete", order.ticket, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <br>
      </div>
    </div>
  <% end %>
